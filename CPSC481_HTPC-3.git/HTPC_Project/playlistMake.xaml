<Window x:Class="HTPC_Project.playlistMake"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="playlistMake" Height="140" Width="300">
    <Grid Background="#FF424242">
        <Label Content="Playlist Name:" HorizontalAlignment="Left" Margin="29,22,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White"/>
        <TextBox x:Name="text" HorizontalAlignment="Left" Height="23" Margin="128,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" TextChanged="textChanged"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="58,70,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="158,70,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>
