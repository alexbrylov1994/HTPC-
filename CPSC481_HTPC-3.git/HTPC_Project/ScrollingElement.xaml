<UserControl x:Class="HTPC_Project.ScrollingElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HTPC_Project"
             mc:Ignorable="d" 
             d:DesignHeight="142" d:DesignWidth="708">
    <Grid x:Name="Grid">
        <ScrollViewer PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" x:Name="ScrollViewer" Margin="0" HorizontalScrollBarVisibility= "Hidden" PanningMode="HorizontalOnly" VerticalScrollBarVisibility="Disabled">
            <UniformGrid x:Name="UniformGrid" Rows="1" Width="Auto" HorizontalAlignment="Left"/>
        </ScrollViewer>

    </Grid>
</UserControl>
