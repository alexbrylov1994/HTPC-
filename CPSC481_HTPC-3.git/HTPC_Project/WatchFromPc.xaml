        <Grid.Background>
            <ImageBrush ImageSource="Graphics/images-4.jpg"/>
        </Grid.Background>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="35" Margin="299,65,296,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="397" Background="#3F461A7C" FontWeight="Bold" FontSize="29.333" FontFamily="Arial Black" SelectionBrush="{x:Null}" Foreground="#BF15042B" TextChanged="textBox_TextChanged"/>
